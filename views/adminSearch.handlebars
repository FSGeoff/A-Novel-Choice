{{> navbar}}

<section>
    <div class="container">
        <div class="row">
            <div class="col s2"></div>
            <div class="col s8">
                <h4>Select Your Club</h4>
            </div>
            <div class="col s2"></div>
        </div>

        <!-- Club Selection Block -->
        <div class="row">
            <div class="col s2"></div>
            <div class="col s8">
                <select class="browser-default left" id="clubSelect">
                    <option value="" disabled selected>Select Club</option>
                    {{#each clubs}}
                    <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="col s1">
                <a href="#" class="btn-flat left" id="selectedClub"><i class="material-icons blue-text">search</i></a>
            </div>
            <div class="col s1"></div>
        </div>

        <div class="row">
            <div class="col s10" id="newClub">
                <a class="modal-trigger" href="#modalNewGroup" id="newGroup"><u>Create New Group</u></a>
            </div>
            <div class="col s2"></div>
        </div>


        <!-- Books by Club render block -->
        <div class="row">
            <div class="col s2"></div>
            <div class="col s8">
                <div class="row">
                    <div class="col s1"></div>
                    <div class="col s10">

                        <!-- Loop block to show books by title and author. -->
                        <!-- TODO: Get the rendering to work. -->
                        {{#each books}}
                        <div class="row">
                            <div class="col s10">
                                <h5 id="selectedBook" value={{id}}>{{title}}</h5>
                                <p>By: {{author}}</p>
                            </div>
                            <div class="col s1">
                                <a class="material-icons right blue-text modal-trigger" href="#modalEditNovel"
                                    id="editNovel">create</a>
                            </div>
                            <div class="col s1" id="deleteNovel">
                                <a class="material-icons right blue-text" href="#">delete</a>
                            </div>
                        </div>
                        <hr>
                        {{/each}}

                    </div>
                    <div class="col s1"></div>
                </div>
            </div>
            <div class="col s2">

            </div>
        </div>

        <!-- TODO: Convert this button to display when the response for the club query loads. -->
        <div class="row">
            <div class="col s2"></div>
            <div class="col s8" id="hidden">
                <a class="waves-effect waves-light btn blue modal-trigger" href="#modalNewNovel" id="newNovel">Add a New
                    Novel</a>
            </div>
            <div class="col s2"></div>
        </div>

    </div>
</section>



