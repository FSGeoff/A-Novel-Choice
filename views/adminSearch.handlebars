<!-- New Group -->
<div class="modal" id="modalNewGroup">
    <div class="modal-content">
        <h4>Add A Group</h4>
        <hr>
        <div class="container">
            <h5>Enter Group Name:</h5>
            <div class="input-field col s12">
                <textarea id="groupName" class="materialize-textarea"></textarea>
                <label for="groupName">Group Name</label>
            </div>
        </div>
        <div class="modal-footer">
            <a href="#!" class="modal-close btn-flat">Cancel</a>
            <a href="#!" class="modal-close waves-effect btn blue">Save</a>
        </div>
    </div>
</div>

<!-- New Novel -->
<div class="modal" id="modalNewNovel">
    <div class="modal-content">
        <h4>Add A Novel</h4>
        <hr>
        <div class="container">
            <h5>Enter the novel details:</h5>
            <div class="input-field col s12">
                <textarea id="bookTitle" class="materialize-textarea"></textarea>
                <label for="bookTitle">Title</label>
            </div>
            <div class="input-field col s12">
                <textarea id="bookAuthor" class="materialize-textarea"></textarea>
                <label for="bookAuthor">Author</label>
            </div>
        </div>
        <div class="modal-footer">
            <a href="#!" class="modal-close btn-flat">Cancel</a>
            <a href="#!" class="modal-close waves-effect btn blue">Save</a>
        </div>
    </div>
</div>

<!-- Edit Novel -->
<!-- TODO: Modify this to bring in the values of the record being edited. -->
<div class="modal" id="modalEditNovel">
    <div class="modal-content">
        <h4>Modify A Novel</h4>
        <hr>
        <div class="container">
            <h5>Modify the novel details:</h5>
            <div class="input-field col s12">
                <textarea id="bookTitle" class="materialize-textarea"></textarea>
                <label for="bookTitle">Title</label>
            </div>
            <div class="input-field col s12">
                <textarea id="bookAuthor" class="materialize-textarea"></textarea>
                <label for="bookAuthor">Author</label>
            </div>
        </div>
        <div class="modal-footer">
            <a href="#!" class="modal-close btn-flat">Cancel</a>
            <a href="#!" class="modal-close waves-effect btn blue">Save</a>
        </div>
    </div>
</div>

